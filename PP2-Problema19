        return a;
    }
    public static void mostrarA(double a){
        System.out.println("el seno es igual a"+Math.sin(a));// convierte el valor insertado en el seno
        System.out.println(" el coseno es igual a"+ Math.cos(a));// convierte el valor insertado en el coseno
