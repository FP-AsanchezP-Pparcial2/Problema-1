package javaapplication11;
import java.util.Scanner
/**
 *
 * @author Alejandro
 */
public class JavaApplication11 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        int S=30,H;
        double ST;
        H = HorasTrabajo();
        ST = calcularSalario(H,S);
        System.out.println("tu salario es igual a "+ ST);
        // TODO code application logic here
    }
    public static int HorasTrabajo(){
        int H;
        Scanner teclado = new Scanner (System.in);
        H = teclado.nextInt();
        return H;
    }
    public static double calcularSalario(int H,int S){
        double ST=0;
        if(H<40) ST=H*S;
        if(H<=48) ST=(40*S)+ (((H-40)*S)*2);
        if (H>48) ST=(40*S)+ (8*(2*S))+ (((H-48)*S)*3);
        return ST;
        
    }
}
