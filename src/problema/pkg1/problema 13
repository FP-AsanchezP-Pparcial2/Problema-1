package javaapplication19;
import java.util.*;
/**
 *
 * @author Alejandro
 */
public class JavaApplication19 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        int v[]= new int [30];
        int P;
        v = pedir();
        P = promediov(v);
        SoBaPromedio(P,v);
        // TODO code application logic here
    }
    public static int pedir(int [] v){
        Scanner teclado = new Scanner(System.in);
        for(int i=0;i<v.length;i++){
            System.out.print("Para "+i+"inserta un numero");
            v[i]=teclado.nextInt();
        }
        return v;
    }
    public static int promediov(int [] v){
        int p=0;
        for (int i=0; i<v.length; i++){
            p = v[i]+p;
            
    }
    System.out.println("promedio es "+(p/30));
    return p;
}
    public static void SoBaPromedio(int [] v, int P){
        int p=0;
        for(int i=0;i<v.length;i++){
            if(v[i]>P){
                p++;
        
    }System.out.println("arriba de "+p);
        System.out.println("abajo de "+(v.length-p));
        }
}    
}
