package javaapplication13;
import java.util.Scanner
/**
 *
 * @author Alejandro
 */
public class JavaApplication13 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        double c1,c2,h;
        System.out.println("este programa te ayuda a calcular la hipotenusa de 2 catetos");
        System.out.println("inserta los 2 catetos pra calcular la hipotenusa");
        c1 = PedirCateto();
        c2 = PedirCateto();
        h = calcularH(c1,c2);
        System.out.println("la medida de la hipotenusa es igual a "+h);
    }
    public static double PedirCateto(){
        double c;
        Scanner teclado = new Scanner(System.in);
        c = teclado.nextDouble();
        return c;
    }
    public static double calcularH(double c1,double c2){
        double h;
        h = Math.sqrt((Math.pow(c1, 2))+Math.pow(c2, 2));
        return h;
    }
}
